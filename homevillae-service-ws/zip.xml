<assembly>
    <id>${version}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>dist/config</directory>
            <outputDirectory>/config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist/lib</directory>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist/bin</directory>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist/etc</directory>
            <outputDirectory>/etc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist/logs</directory>
            <outputDirectory>/logs</outputDirectory>
            <excludes>*.*</excludes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*.war</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>